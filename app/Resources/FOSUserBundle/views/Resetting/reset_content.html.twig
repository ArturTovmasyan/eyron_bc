<div class="container">
    <div  class="signup">
        <div class=" row">
            <h1 class="text-center">{{ 'resetting.request.reset'|trans({}, 'FOSUserBundle') }}</h1>

            <div class="col-md-6 col-md-offset-3">
                <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset form-horizontal">

                    {% set errorMessage = form.new.first.vars.errors[0] is defined ? form.new.first.vars.errors[0].message : '' %}
                    <p class="text-center" {% if errorMessage == 'Error' %}style="color:red"{% endif %}>
                        {{ 'password.validation'|trans({}, 'FOSUserBundle') }}
                    </p>

                    <div class="form-group">
                        {{ form_widget(form.new.first, {'attr': {'class' : 'form-control', 'placeholder': 'resetting.password'|trans({}, 'FOSUserBundle') } }) }}
                    </div>

                    <div class="form-group">
                        {{ form_widget(form.new.second, {'attr': {'class' : 'form-control', 'placeholder': 'resetting.confirm_password'|trans({}, 'FOSUserBundle') } }) }}

                        {% if errorMessage != 'Error' %}
                            <span class="text-center text-red">{{ errorMessage }}</span>
                        {% endif %}
                    </div>

                    <div class="form-group text-right">
                        <input type="submit" class="btn btn-purple" value="{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}" />
                    </div>

                    {{ form_widget(form._token) }}
                </form>
            </div>
        </div>
    </div>
</div>
