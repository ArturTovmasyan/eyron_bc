{% extends "::base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}

    <link href="{{ asset('app/bower_components/jquery-nice-select/css/nice-select.css') }}" rel="stylesheet"/>
{% endblock %}

{% block content %}
    {% include "FOSUserBundle:Registration:register_content.html.twig" %}
{% endblock content%}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('app/bower_components/jquery-nice-select/js/jquery.nice-select.min.js') }}" type="text/javascript"></script>

    <script>
        function showUploadedImage(input){
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('.uploaded-image').show();
                    $('.uploaded-image')
                            .attr('src', e.target.result);
                    $('.upload').hide();
                };

                reader.readAsDataURL(input.files[0]);
            }
        }

        $(document).ready(function(){
            $('select').niceSelect();
        });
    </script>
{% endblock %}

{%- block title -%}
    {{ 'user.register_title'|trans({}, 'FOSUserBundle') }}
{%- endblock -%}

{%- block meta_description -%}
    {{ 'user.register_description'|trans({}, 'FOSUserBundle') }}
{% endblock %}


{%- block og_url -%}
    {{- app.request.uri }}
{%- endblock -%}
