<div id="scroll-button"></div>
<div id="homepage-ideas" class="ideas-list">
    <div class="container">
        {% if search is defined and search == 0 %}

        {% else %}
            <h2 class="text-center text-dark">{{ 'homepage_list_title'|trans }}</h2>

        {% endif %}

        <div class="row">
            <div class="col-sm-6 col-sm-offset-3 col-md-12 col-md-offset-0">
                <div class="row idea-item">

                    <div class="col-md-4">
                        {% for goal in goals|slice(0, 2)  %}

                            <div class="row">
                                <div class="col-sm-12">
                                    <figure>

                                        <h3>
                                            <a href="{{ path('inner_goal', {'slug': goal.slug }) }}">{{ goal.title }}</a>
                                        </h3>

                                        {% set imageDownloadLink = goal.listPhotoDownloadLink %}

                                        <a href="{{ path('inner_goal', {'slug': goal.slug }) }}" >
                                            <span class="overlay"></span>
                                            {% if imageDownloadLink %}
                                                <img src="{{ imageDownloadLink|blImageFilter('goal_list_small')  }}"  alt="{{ goal.title }}"/>
                                            {% endif %}
                                        </a>

                                        <div class="absolute">
                                            <ul>
                                                <li>
                                                    <a data-ng-click="openSignInPopover()">
                                                        <span>
                                                            {{ 'home_listed_by'|trans({},'messages') }}
                                                            {{ goal.stats.listedBy }}
                                                        </span>
                                                        <i class="icon-user-small"></i>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a  data-ng-click="openSignInPopover()">
                                                        <span>
                                                            {{ 'home_complete'|trans({},'messages') }}
                                                            {{ goal.stats.doneBy }}
                                                        </span>
                                                        <i class="icon-user-small"></i>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>

                                        <figcaption>
                                            {%  include "AppBundle:Blocks:goalFooter.html.twig" with {'goal' : goal }  %}
                                        </figcaption>

                                    </figure>
                                </div>
                            </div>
                        {% endfor %}

                    </div>

                    <div class="col-md-4">
                        {% for goal in goals|slice(2, 1)  %}

                            <figure>

                                <h3>
                                    <a href="{{ path('inner_goal', {'slug': goal.slug }) }}">{{ goal.title }}</a>
                                </h3>

                                {% set imageDownloadLink = goal.listPhotoDownloadLink %}

                                <a href="{{ path('inner_goal', {'slug': goal.slug }) }}" class="height">
                                    <span class="overlay height"></span>
                                    {% if imageDownloadLink %}
                                        <img src="{{ imageDownloadLink|blImageFilter('goal_list_vertical')  }} " alt="{{ goal.title }}"/>
                                    {% endif %}
                                </a>

                                <div class="absolute">
                                    <ul>
                                        <li>
                                            <a data-ng-click="openSignInPopover()">
                                                <span>
                                                    {{ 'home_listed_by'|trans({},'messages') }}
                                                    {{ goal.stats.listedBy }}
                                                </span>
                                                <i class="icon-user-small"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a  data-ng-click="openSignInPopover()">
                                                <span>
                                                    {{ 'home_complete'|trans({},'messages') }}
                                                    {{ goal.stats.doneBy }}
                                                </span>
                                                <i class="icon-user-small"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>

                                <figcaption>
                                    {%  include "AppBundle:Blocks:goalFooter.html.twig" with {'goal' : goal }  %}
                                </figcaption>

                            </figure>
                        {% endfor %}

                    </div>

                    <div class="col-md-4">
                        {% for goal in goals|slice(3, 2)  %}

                            <div class="row">
                                <div class="col-sm-12">
                                    <figure>

                                        <h3>
                                            <a href="{{ path('inner_goal', {'slug': goal.slug }) }}">{{ goal.title }}</a>
                                        </h3>

                                        {% set imageDownloadLink = goal.listPhotoDownloadLink %}

                                        <a href="{{ path('inner_goal', {'slug': goal.slug }) }}">
                                            <span class="overlay"></span>

                                            {% if imageDownloadLink %}
                                                <img src="{{ imageDownloadLink|blImageFilter('goal_list_small')  }}" alt="{{ goal.title }}"/>
                                            {% endif %}

                                        </a>

                                        <div class="absolute">
                                            <ul>
                                                <li>
                                                    <a data-ng-click="openSignInPopover()">
                                                        <span>
                                                            {{ 'home_listed_by'|trans({},'messages') }}
                                                            {{ goal.stats.listedBy }}
                                                        </span>
                                                        <i class="icon-user-small"></i>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a  data-ng-click="openSignInPopover()">
                                                        <span>
                                                            {{ 'home_complete'|trans({},'messages') }}
                                                            {{ goal.stats.doneBy }}
                                                        </span>
                                                        <i class="icon-user-small"></i>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>

                                        <figcaption>
                                            {%  include "AppBundle:Blocks:goalFooter.html.twig" with {'goal' : goal }  %}
                                        </figcaption>

                                    </figure>
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                </div>

                <div class="row idea-item">
                    {% for goal in goals|slice(5, 2)  %}

                        <div class="col-md-{{ loop.first ?  8 : 4 }}">
                            <figure>

                                <h3>
                                    <a href="{{ path('inner_goal', {'slug': goal.slug }) }}">{{ goal.title }}</a>
                                </h3>

                                {% set imageDownloadLink = goal.listPhotoDownloadLink %}

                                <a href="{{ path('inner_goal', {'slug': goal.slug }) }}">
                                    <span class="overlay"></span>
                                    {% if imageDownloadLink %}
                                        <img src="{% if loop.first %}{{ imageDownloadLink|blImageFilter('goal_list_horizontal') }}{% else %}
                                         {{ imageDownloadLink|blImageFilter('goal_list_small') }}{% endif %}" alt="{{ goal.title }}"/>
                                    {% endif %}
                                </a>

                                <div class="absolute">
                                    <ul>
                                        <li>
                                            <a data-ng-click="openSignInPopover()">
                                                <span>
                                                    {{ 'home_listed_by'|trans({},'messages') | capitalize }}
                                                    {{ goal.stats.listedBy }}
                                                </span>
                                                <i class="icon-user-small"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a data-ng-click="openSignInPopover()">
                                                <span>
                                                    {{ 'home_complete'|trans({},'messages') | capitalize }}
                                                    {{ goal.stats.doneBy }}
                                                </span>
                                                <i class="icon-user-small"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>

                                <figcaption>
                                    {%  include "AppBundle:Blocks:goalFooter.html.twig" with {'goal' : goal }  %}
                                </figcaption>
                            </figure>
                        </div>
                    {% endfor %}
                </div>

                <div class="row">
                    <div class="col-sm-12 text-center">
                        <a href="{{ path("goals_list") }}" class="btn btn-purple">{{ 'btn_discover_more'|trans }}</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
