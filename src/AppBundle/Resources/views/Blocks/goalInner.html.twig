                                                    {#{% endif %}#}
                                                {#</li>#}
                                            {#</ul>#}
                                        {#</li>#}
                                    {#</ul>#}
                                {#</li>#}

                                {#<li>#}
                                    {#<ul class="row">#}
                                        {#<li class="col-xs-5">#}
                                            {#{{ 'listed_by'|trans | upper }}#}
                                            {#<p class="text-purple">{{ goal.stats.listedBy }}</p>#}
                                        {#</li>#}
                                        {#<li class="col-xs-7">#}
                                            {#<ul class="users">#}
