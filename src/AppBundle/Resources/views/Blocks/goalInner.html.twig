                <div class="row bg-white">

                    <div class="col-md-8">
                        {% if page == inner %}
                        <ul class="users-lists row">
                            <li class="col-xs-6">
                                <ul class="row no-gutter">
                                    <li class="col-xs-9 col-sm-5">
                                        {{ 'done_by'|trans | upper }}
                                        <p class="text-purple">{{ goal.stats.doneBy }}</p>
                                    </li>
                                    <li class="col-xs-3 col-sm-7">
                                        <ul class="users">
                                            {% set left = 80 %}
                                            {% for doneByUser in doneByUsers %}
