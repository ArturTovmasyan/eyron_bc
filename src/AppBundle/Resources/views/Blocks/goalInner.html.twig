{% set inner = constant("AppBundle\\Entity\\Goal::INNER") %}
{% set view = constant("AppBundle\\Entity\\Goal::VIEW") %}
{% set user = app.user %}
{% set storiesCount = 20 %}
{% set author = goal.author %}
{% if user.id is defined %}
    {% set userId = user.id %}
{% else %}
    {% set userId = 0 %}
{% endif %}

<div id="fb-root"></div>

<div class="inner-container {% if not aphorisms %} no-quote {% if not author or author.isAdmin %} no-author{% endif %} {% endif %}">
    {% set cover = goal.getCoverPhotoDownloadLink %}
    {% set goalInner = true %}
    {% set imgPath ='bundles/app/images/cover' ~ random(4) ~ '.jpg' %}
    <figure class="goal-image">
        <span class="overlay"></span>
        <img src="
        {% if cover %}
             {{ cover|blImageFilter('goal_bg') }}
        {% else %}
             {{ asset(imgPath)}}
        {% endif %}"
             alt="{{ goal.title }}" />
    </figure>
    <div class="container"
         data-ng-cloak
         data-infinite-scroll='Ideas.nextPage("{{ env_prefix }}/api/v1.0/goals/{first}/{count}")'
         data-infinite-scroll-disabled='Ideas.request >= 1'
         data-infinite-scroll-distance='2'>
    </div>

    <div class="goal-content" data-ng-init="goal.public= {% if goal.status %} true {% else %} false {% endif %} ">
        <div class="container">
            <div class="row">
                <div class="col-md-5"></div>
                <div class="col-md-7">
                    <div class="quote">

                        <div class="ticker">
                            {% if aphorisms %}
                                <i class="icon-quote-left"></i>
                                <i class="icon-quote-right"></i>
                                <ul class="aphorism" data-delay-add-class data-delay="12000">
                                    {% for aphorism in aphorisms %}
                                        <li>{{ aphorism.content|length > 230 ? aphorism.content|slice(0, 230)|removeTag ~ '...' : aphorism.content|removeTag }}
                                            <span class="text-right">{{ aphorism.author }}</span>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    {% if author and not author.isAdmin %}
                        <p class="goal-author">
                            <a href="{{ path('user_profile',  {'user': author.uId})}}" class="text-gray bg-blue">{{ 'by' ~ " " ~ author.showName }} </a>
                        </p>
                    {% endif %}
                    <h2 class="goal-inner-title {% if goal.title|length > 40 %}title-smaller{% endif %}">{{ goal.title }}</h2>
                </div>
            </div>

            <div class="inner-content">

            <div class="row no-gutter">
                <div class="col-md-8">

                    {% set images = goal.images %}
                    {% if images and images | length %}
                        <div id="main-slider" class="swiper-container">
                            <!-- Slides Container -->
                            <div {% if images| length > 1 %} class="swiper-wrapper" {% endif %}>
                                {% for key, image in images %}

                                    {% if image.downloadLink|length > 0 %}
                                        <div class="overlay swiper-slide">
                                            <a href="{{ image.downloadLink|blImageFilter('slide_max_size') }}" class="swipebox-main" data-title="{{ goal.title }}">
                                                <img class="img-responsive" src="{{ image.downloadLink|blImageFilter('goal_bg') }}" alt="{{ goal.title }}" {% if image.imageSize["height"] < 435 %}style="height: 100%;" {% endif %}/>
                                            </a>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>

                            {% if images| length > 1 %}
                                <!-- Add Pagination -->
                                <div class="swiper-pagination swiper-pagination-white"></div>
                                <!-- Add Arrows -->
                                <div class="swiper-button-next swiper-button-white"></div>
                                <div class="swiper-button-prev swiper-button-white"></div>
                            {% endif %}
                        </div>
                    {% else%}
                        <figure class="goal-preview" id="main-slider">
                            <img class="img-responsive" src="{{ asset(imgPath)}}" alt="view goal img" style="height: 100%;"/>
                        </figure>
                    {% endif %}
                </div>
                <div class="col-md-4" data-ng-init="success[ {{ goal.id }} ] = {% if goal.isMyGoal == 2 %} true {% else %} false {% endif %}">
                    {% if page == inner %}
                        <div class="goal-information">
                            <ul class="row goal-links" data-ng-init="added = true">
                                {% set xs = 6 %}
                                {% if is_granted('ROLE_SUPER_ADMIN', app.user) %}
                                    {% set xs = 3 %}
                                    <li class="col-xs-3 clone">
                                        <a href="{{ path('add_goal', {'id': goal.id, 'clone' : true }) }}">
                                            {#<span class="glyphicon glyphicon-copy "></span>#}
                                            <img src="{{ asset('bundles/app/images/clone-icon.svg') }}" width="25" height="25"/>{{ 'clone'|trans }}
                                        </a>
                                    </li>
                                {% endif %}

                                <li class="col-xs-{{ xs }} {% if goal.isMyGoal != 0 %}transparent{% endif %}" {% if goal.isMyGoal == 0 %}data-ng-class="{transparent: added || success[ {{ goal.id }} ]}" {% endif %}>
                                    {% if goal.isMyGoal == 0 %}
                                        <a href="javascript:void(0)"
                                           data-ng-init="added = false" data-ng-show="!added"
                                           data-ng-cloak
                                           data-ls-goal-manage
                                           data-ls-goal-id="{{ goal.id }}"
                                           data-ng-click="added = true{% if isMobile() and not app.user%}; popoverByMobile(){% endif %}">
                                            <i class="icon-plus-icon"><span class="path1"></span><span class="path2"></span><span class="path3"></span></i>
                                            <span class="text">{{ 'add'|trans | upper}}</span>
                                        </a>
                                    {% endif %}
                                    <span class="ng-hide" data-ng-show="{% if goal.isMyGoal %}true{% else %}false{% endif %} || added">
                                        <i class="icon-green-plus"><span class="path1"></span><span class="path2"></span><span class="path3"></span><span class="path4"></span></i>
                                        <span class="text">{{ 'added'|trans | upper}}</span>
                                    </span>
                                </li>


                                <li class="col-xs-6 {% if goal.isMyGoal == 2 %}transparent{% endif %}" {% if goal.isMyGoal != 2 %}data-ng-class="{transparent: success[ {{ goal.id }} ]}"{% endif %}>
                                    <a href="javascript:void(0)"
                                       data-ng-show="!success[ {{ goal.id }} ]"
                                       data-ng-cloak
                                       data-ls-user-goal-manage
                                       data-ls-goal-id="{{ goal.id }}"
                                       data-ng-click="success[ {{ goal.id }} ] = true; added = true{% if isMobile() and not app.user%}; popoverByMobile(){% endif %}">
                                        <i class="icon-ok-icon"><span class="path1"></span><span class="path2"></span></i>
                                        <span class="text">{{ 'done'|trans | upper }}</span>
                                    </a>

                                    <span class="ng-hide" data-ng-show="success[ {{ goal.id }} ]">
                                         <i class="icon-green-ok"><span class="path1"></span><span class="path2"></span><span class="path3"></span></i>
                                         <span class="text">{{ 'completed'|trans | upper}}</span>
                                    </span>
                                </li>
                            </ul>
                            {% if goal and goal.isMyGoal == 1 or goal.isMyGoal == 2 %}
                                <ul class="goal-icons" data-ng-cloak data-ng-init="goalId = {{ goal.id }}">
                                    {% if author and author.id == userId %}
                                        <li data-ng-init="isAuthor=true">
                                            <a href="{{ path('add_goal') }}?id={{ goal.id }}&slug=Public">
                                                <i title="{{ 'my_bucket_list.edit'|trans }}" class="icon-pencil"></i>
                                            </a>
                                        </li>
                                    {% endif %}

                                    <li class="bordered-list">
                                        <a href="javascript:void(0)"
                                           data-ng-cloak
                                           data-ls-type="manage"
                                           data-ls-goal-id="{{  goal.id }}"
                                           data-ls-goal-manage
                                           class="text-gray manage-modal">
                                            <i class="icon-manage"></i>
                                        </a>
                                    </li>

                                    <li class="bordered-list">
                                        <div class="check_status">
                                            <a href="javascript:void(0)"
                                               data-ng-show="!success[ {{ goal.id }} ]"
                                               data-ng-click="success[ {{ goal.id }} ] = true"
                                               data-ls-goal-id="{{ goal.id }}"
                                               data-ls-user-goal-manage
                                               id="done{{ goal.id }}"
                                               class="ng-hide">
                                                <i class="icon-ok-icon"><span class="path1"></span><span class="path2"></span></i>
                                            </a>
                                            <a  href="javascript:void(0)"
                                                data-ng-show="success[ {{ goal.id }} ]"
                                                data-ls-user-goal-manage
                                                data-ls-type="manage"
                                                data-ls-goal-id="{{ goal.id }}"
                                                class="successtory ng-hide"
                                                id="success{{ goal.id }}">
                                                <i class="icon-green-ok"><span class="path1"></span><span class="path2"></span><span class="path3"></span></i>
                                            </a>
                                        </div>
                                    </li>

                                    <li data-ng-if="isLate(goal.do_date)">
                                        <i title="{{ 'my_bucket_list.missed_deadline'|trans }}"  class="icon-info text-purple"></i>
                                    </li>

                                    <li data-ng-if="goal.note">
                                        <i title="{{ 'my_bucket_list.notes'|trans }}" class="edit-note"></i>
                                    </li>

                                    {#<li data-ng-if="!isEmpty(userGoal.steps)">#}
                                    <li data-ng-if="goal.steps">
                                        <i title="{{ 'goal.steps'|trans }}"  class="icon-step-list"></i>
                                    </li>

                                    <li data-ng-if="goal.is_visible">
                                        <i title="{{ 'goal.visible'|trans }}" class="icon-eye-icon"></i>
                                    </li>
                                    <li data-ng-if="!goal.is_visible">
                                        <i title="{{ 'my_bucket_list.invisible'|trans }}" class="icon-eye"></i>
                                    </li>

                                    <li data-ng-if="!goal.public">
                                        <i title="{{ 'my_bucket_list.private'|trans }}"  class="icon-lock-white"></i>
                                    </li>
                                </ul>
                            {% endif %}

                            {% if goal.lat is not null and goal.lng is not null %}
                                <div data-ng-show="isDesktop" data-ng-init="location=[{latitude: {{ goal.lat }}, longitude: {{ goal.lng }}, status: '{{ goal.isMyGoal|default(0) }}', title: '{{ goal.title }}', id: 'deed'}]">
                                    <div class="map-marker" data-ng-show="location"
                                         data-simple-map-marker
                                         data-zoom="14"
                                         data-active-goal-marker-icon1="{{ asset('bundles/app/images/Active-icon.png') }}"
                                         data-active-goal-marker-icon2="{{ asset('bundles/app/images/Completed-icon.png') }}"
                                         data-passive-marker-icon="{{ asset('bundles/app/images/map-marker-purple.png') }}"
                                         data-markers="location"

                                         style="width: 99.8%; height: 120px">
                                    </div>
                                </div>
                            {% else %}
                                <hr />
                            {% endif %}

