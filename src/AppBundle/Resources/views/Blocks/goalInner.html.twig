                            {% endif %}

                            {% if page == inner %}

                                {% set stories = goal.getSuccessStories %}

                                {% if stories|length > 0 %}
                                    <div class="story-count">
                                        <div class="row">
                                            <div class="col-xs-12">
                                                <a name="success_story"></a>
                                                <h4 class="text-dark-gray">
                                                    <i class="success-icon"></i>
                                                    {{ 'success_stories'|trans }}
                                                </h4>
                                            </div>
                                        </div>
                                        <hr />
                                    </div>

                                    {% for key, story in stories %}
                                        {% set addedUser = story.user %}
                                        {% set files = story.files %}
                                        {% set videos = story.videoLink %}

                                        <div class="comment-place story-fade-in ng-hide"
                                             data-ng-show="successStoryShow[{{ key }}]{% if app.user and story.user.id == app.user.id %} && showMyStory[{{ story.id }}]{% endif %}"
                                             data-ng-init="successStoryShow[{{ key }}]={{ key < storiesCount ? 'true':'false' }};
                                             count[{{ story.id }}] = {{ story.getVotersCount() }};
                                             vote[{{ story.id }}] = '{{ app.user is not null and story.getIsVote() }}'? true: false
                                             {% if app.user and story.user.id == app.user.id %};showMyStory[{{ story.id }}] = true{% endif %}">
                                            <div class="row no-gutter">
                                                <div class="col-xs-9">
                                                    {#<div class="row no-gutter">#}
                                                        {#<div class="col-xs-2 col-sm-3 col-md-2">#}
                                                        <div class="clearfix">
                                                            <a {% if app.user is not null %} href="{{ path('user_profile',  {'user': addedUser.uId})}}"{% else %}
                                                                data-ng-click="openSignInPopover()" {% endif %}
                                                                 class="pull-left">
                                                                {% set nameOnImage = addedUser.firstName|slice(0,1) ~ addedUser.lastName|slice(0,1) %}
                                                                {% set className = "user-no" ~ random(4) %}

                                                                <figure class="user-image">
                                                                    {% if addedUser.getPhotoLink  %}
                                                                    <img src="{{ addedUser.getPhotoLink|blImageFilter('user_icon') }}" class="img-circle img-responsive" alt="{{ addedUser.firstName }}">
                                                                    {% else %}
                                                                        <span class="no-image text-white {{ className }}">{{ nameOnImage | upper}}</span>
                                                                    {% endif %}
                                                                </figure>

                                                            </a>

                                                            <div class="pull-left">
                                                                <p>
                                                                    <a {% if app.user is not null %} href="{{ path('user_profile',  {'user': addedUser.uId})}}"{% else %}
                                                                        data-ng-click="openSignInPopover()" {% endif %}
                                                                     class="text-dark-gray">{{ addedUser.showName }}</a>
                                                                </p>
                                                            <span data-ng-cloak>
                                                                [[ ::dateToLocal('{{ story.updated | date('m/d/Y H:i O') }}') ]]
                                                            </span>
                                                                {% if app.user is not null and addedUser.id != app.user.id%}
                                                                    <span data-ls-report
                                                                          data-ls-type="1"
                                                                          data-ls-comment="{{ story.id }}"
                                                                          class="report">{{ 'report.title'|trans({},'messages') }}
                                                                </span>
                                                                {% endif %}
                                                            </div>
                                                        </div>

                                                        {#<div class="col-xs-10 col-sm-9 col-md-10">#}

                                                    {#</div>#}
                                                </div>

                                                <div class=" col-xs-3 text-right" data-ng-cloak>
                                                    <span class="text-purple ng-hide" data-ng-show="count[{{ story.id }}] < 1">0</span>
                                                          <a data-ls-goal-users
                                                             class="text-purple ng-hide"
                                                             data-ng-show="count[{{ story.id }}] > 0"
                                                             href="javascript:void(0)"
                                                             data-ls-item-id="{{ story.id }}"
                                                             data-ls-count="[[ count[{{ story.id }}] ]]"
                                                             data-ls-category="3">
                                                              [[ count[{{ story.id }}] ]]
                                                          </a>
                                                    {% set class = '' %}
                                                    <i data-ng-class="{'like-active': vote[{{ story.id }}]}" {% if app.user is  null %} data-ng-click="openLogin()" {% elseif story.user.id != app.user.id %}data-ng-click="manageVote({{ story.id }})" {% else %}  {% set class = 'user-story' %} {% endif %} class="like-icon {{ class }}"></i>
                                                </div>

                                            </div>

                                            {% if app.user and story.user.id == app.user.id %}
                                                <div class="story-remove" data-ls-text="{{ 'success_story.delete_confirm'|trans }}" data-ls-confirm="removeStory({{ story.id }})"><span class="report">{{ 'btn_delete'|trans }}</span></div>
                                            {% endif %}

                                            <div class="border-left">
                                                <div class="row">
                                                    <div class="col-xs-12">
                                                        <p>{{ story.story }} </p>
                                                    </div>
                                                </div>
                                            </div>
                                            {% if files and files|length %}

                                                {% if files|length == 1 %}
                                                    {% set file = files.first %}
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            <figure>
                                                                <img src="{{ file.getDownloadLink|blImageFilter('goal_list_small') }}" alt="{{ file.fileName }}" height="360"/>
                                                            </figure>
                                                        </div>
                                                    </div>
                                                {% else %}
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            <div id="story-slider-image{{ key }}" data-ng-init="successStoryImageKeys[{{ key }}] = {{ key }}" class="swiper-container story-slider image-slider">
                                                                <!-- Slides Container -->
                                                                <div class="swiper-wrapper">
                                                                    {% for k,file in files %}
                                                                        <div class="swiper-slide">
                                                                            <a href="{{ file.downloadLink|blImageFilter('slide_max_size') }}" class="swipebox-key-{{ key }}">
                                                                                <img class="img-responsive" src="{{ file.downloadLink|blImageFilter('goal_list_small') }}" alt="{{ file.fileName }}"/>
                                                                            </a>
                                                                        </div>
                                                                    {% endfor %}
                                                                </div>

                                                                {% if files|length > 2 %}
                                                                    <div class="swiper-pagination swiper-pagination-white"></div>
                                                                    <!-- Add Arrows -->
                                                                    <div class="swiper-button-next swiper-button-white"></div>
                                                                    <div class="swiper-button-prev swiper-button-white"></div>
                                                                {% endif %}
                                                            </div>
                                                        </div>
                                                    </div>
                                                {% endif %}
                                            {% endif %}

                                            {% if videos and videos|length %}

                                                {% if videos|length == 1 %}
                                                    {% set v = videos[0] %}
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            <figure>
                                                                {#<iframe src="{{ v }}" width="700" height="360"></iframe>#}
                                                                <embed-video
                                                                    data-ng-href="[[ ::storySliderVideo[{{ key }}] ]]"
                                                                    data-ng-init="storySliderVideo[{{ key }}]='{{ v }}'"
                                                                    height="360px"
                                                                    width="100%">
                                                                </embed-video >
                                                            </figure>
                                                        </div>
                                                    </div>
                                                {% else %}
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            <div id="story-slider-video{{ key }}" class="swiper-container story-slider video-slider">
                                                                <!-- Slides Container -->
                                                                <div class="swiper-wrapper">
                                                                    {% for k,video in videos %}
                                                                        {% if video %}
                                                                            <div class="swiper-slide">
                                                                                <embed-video
                                                                                    u="image"
                                                                                    data-ng-init="storySliderVideo[{{ key }}][{{ k }}]='{{ video }}'"
                                                                                    width="100%"
                                                                                    height="360px"
                                                                                    data-ng-href="[[ ::storySliderVideo[{{ key }}][{{ k }}] ]]">
                                                                                </embed-video>
                                                                            </div>
                                                                        {% endif %}
                                                                    {% endfor %}
                                                                </div>

                                                                <div class="swiper-pagination swiper-pagination-white"></div>
                                                                <!-- Add Arrows -->
                                                                <div class="swiper-button-next swiper-button-white"></div>
                                                                <div class="swiper-button-prev swiper-button-white"></div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                {% endif %}
                                            {% endif %}
                                        </div>
                                    {% endfor %}

                                    {% if stories|length > storiesCount %}
                                        <div class="row">
                                            <div class="col-xs-12">
                                                <div class="text-right">
                                                    <a href="javascript:void(0)"
                                                       data-ng-show="successStoryActiveIndex !== {{ stories|length }}"
                                                       data-ng-click="showMoreSuccessStory({{ stories|length }})"
                                                       data-ng-init="storyLength={{ stories|length - storiesCount}};storiesCount = {{ storiesCount }}"
                                                       class="text-purple view-more-comments">
                                                        Show More +<span data-ng-bind="storyLength"></span>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    {% endif %}

                                {% endif %}

                                    <div data-ls-comment-manage
                                         data-ls-goal-id="{{ goal.id }}"
                                         data-ls-slug="{{ goal.slug }}"
                                         data-ls-inner="true"
                                         data-ls-reply="{{ 'reply'|trans }}"
                                         data-ls-replied="{{ 'replied'|trans }}"
                                         data-ls-logged="{% if app.user %}true{% else %}false{% endif %}"
                                         data-ls-report-title="{{ 'report.title'|trans({},'messages') }}"
                                         data-ls-title="{{ 'comments'|trans }}"
                                         {% if app.user %}
                                             data-ls-user-image="{% if app.user.getDownloadLink  %}{{ app.user.getDownloadLink|blImageFilter('user_icon') }}{% else %}
                                            {% set nameOnImage = app.user.firstName|slice(0,1) ~ app.user.lastName|slice(0,1) %}
                                            {{ nameOnImage  |upper}}{% endif %}"
                                         {% endif %}>
                                    </div>
                            {% endif %}
                        </div>

                    </div>
                    <div class="col-md-4"></div>
                </div>
                <br class="hidden-xs" />
        </div>

        </div>

    </div>

    {% if page == inner %}
        <div class="bg-grey">
            <div class="container" id="random_goals">

                <h2 class="text-center text-dark">{{ 'goal.see_also'|trans }}</h2>

                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3 col-md-12 col-md-offset-0">
                        <div class="row idea-item ">
                            <div class="col-md-4 goals-animate"
                                 data-ng-cloak
                                 data-ng-repeat="goal in Ideas.items">
                                <figure>
                                    <h3>
                                        <a data-ng-href="{{ env_prefix }}/goal/[[ ::goal.slug ]]">[[ ::goal.title ]]</a>
                                    </h3>

                                    <a data-ng-href="{{ env_prefix }}/goal/[[ ::goal.slug ]]"
                                       class="goalTitle">
                                        <span class="overlay"></span>
                                        <img data-ng-if="goal.cached_image" data-ng-src="[[ ::goal.cached_image ]]" alt="[[ ::goal.title ]]"/>
                                    </a>

                                    <div class="absolute">
                                        <ul>
                                            <li>
                                                <a data-ls-goal-users
                                                   href="javascript:void(0)"
                                                   data-ls-goal-id="[[ ::goal.id ]]"
                                                   data-ls-count="[[ ::goal.stats.listedBy ]]"
                                                   data-ls-category="1"
                                                   data-ng-show="castInt(goal.stats.listedBy)">
                                                            <span>
                                                                {{ 'home_listed_by'|trans({},'messages') | capitalize }}
                                                                [[ ::goal.stats.listedBy ]]
                                                            </span>
                                                    <i class="icon-user-small"></i>
                                                </a>

                                                <span class="text-white ng-hide" data-ng-hide="castInt(goal.stats.listedBy)">
                                                    {{ 'home_listed_by'|trans({},'messages') | capitalize }}
                                                    [[ ::goal.stats.listedBy ]]
                                                    <i data-ng-hide="castInt(goal.stats.listedBy)" class="ng-hide icon-user-small"></i>
                                                </span>
                                            </li>
                                            <li>
                                                <a data-ls-goal-users
                                                   href="javascript:void(0)"
                                                   data-ls-count="[[ ::goal.stats.doneBy ]]"
                                                   data-ls-goal-id="[[ ::goal.id ]]"
                                                   data-ng-show="castInt(goal.stats.doneBy)">
                                                            <span>
                                                                {{ 'home_complete'|trans({},'messages') | capitalize }}
                                                                [[ ::goal.stats.doneBy ]]
                                                            </span>
                                                    <i class="icon-user-small"></i>
                                                </a>

                                                <span class="text-white ng-hide" data-ng-hide="castInt(goal.stats.doneBy)">
                                                    {{ 'home_complete'|trans({},'messages') | capitalize }}
                                                    [[ ::goal.stats.doneBy ]]
                                                    <i data-ng-hide="castInt(goal.stats.doneBy)" class="ng-hide icon-user-small"></i>
                                                </span>
                                            </li>
                                        </ul>
                                    </div>

                                    <figcaption>
                                        {%  include "AppBundle:Blocks:goalFooter.html.twig"  %}
                                    </figcaption>
                                </figure>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>